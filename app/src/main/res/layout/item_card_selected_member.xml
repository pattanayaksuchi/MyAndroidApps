<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dialog_member_title_padding"
    android:orientation="horizontal"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_selected_member_image"
        android:layout_width="@dimen/item_selected_member_image_size"
        android:layout_height="@dimen/item_member_image_size"
        android:contentDescription="@string/image_contentDescription"
        android:src="@drawable/ic_user_placeholder"
        android:visibility="visible"
        app:civ_border_color="@color/primaryTextColor"
        app:civ_border_width="@dimen/nav_image_circular_border_width"
        tools:visibility="gone" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_add_member"
        android:layout_width="@dimen/item_selected_member_image_size"
        android:layout_height="@dimen/item_selected_member_image_size"
        android:contentDescription="@string/image_contentDescription"
        android:src="@drawable/ic_add_accent_24"
        android:visibility="visible"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="@dimen/item_selected_member_border_width"
        tools:visibility="visible" />

</LinearLayout>